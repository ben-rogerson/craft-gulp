{
    "name": "craft-gulp",
    "description": "Craft CMS + SCSS + JS + Gulp",
    "version": "1.0.0",
    "main": "gulpfile.js",
    "private": true,
    "scripts": {
        "start": "gulp",
        "build": "NODE_ENV=production gulp build"
    },
    "config": {
        "devUrl": "https://craft-gulp.test",
        "public": {
            "base": "public",
            "build": "public/build",
            "scripts": "public/build/js",
            "styles": "public/build/css"
        },
        "scriptsMain": {
            "watch": "src/js/**/*.js",
            "source": "src/js/app.js",
            "destination": "public/build/js/app.js"
        },
        "scriptsSingles": {
            "source": [],
            "destination": "public/build/js"
        },
        "scriptsVendor": {
            "source": [
                "node_modules/jquery/dist/jquery.min.js"
            ],
            "destination": "public/build/js/vendor.js"
        },
        "stylesMain": {
            "watch": "src/scss/**/*.scss",
            "source": "src/scss/main.scss",
            "destination": "public/build/css/styles.css"
        },
        "images": {
            "watch": "src/img/**/*.{png,jpg,jpeg,gif,svg}",
            "source": "src/img/**/*.{png,jpg,jpeg,gif,svg}",
            "destination": "public/build/img"
        },
        "icons": {
            "watch": "src/icons/**/*.svg",
            "source": "src/icons/*.svg",
            "destination": "public/build/icons.svg"
        },
        "templates": {
            "watch": "templates/**/*.twig",
            "source": "templates"
        },
        "critical": [
            {
                "url": "",
                "template": "index"
            },
            {
                "url": "blog/example",
                "template": "blog"
            }
        ],
        "manifest": {
            "destination": "public/build/revisions.json"
        }
    },
    "browserify-shim": {
        "node_modules/jquery/dist/jquery.min.js": "$"
    },
    "dependencies": {
        "jquery": "^3.3.1",
        "lodash": "^4.17.10"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0",
        "@babel/plugin-proposal-class-properties": "^7.0.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
        "@babel/preset-env": "^7.0.0",
        "babel-plugin-transform-inline-environment-variables": "^0.4.3",
        "babelify": "^9.0.0",
        "browser-sync": "^2.24.7",
        "browserify": "^16.2.2",
        "browserify-shim": "^3.8.14",
        "chalk": "^2.4.1",
        "critical": "1.3.4",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-formatter-pretty": "^1.3.0",
        "eslint-plugin-import": "^2.14.0",
        "gulp": "^3.9.1",
        "gulp-autoprefixer": "^5.0.0",
        "gulp-babel": "^8.0.0-beta.2",
        "gulp-bro": "^1.0.3",
        "gulp-buffer": "0.0.2",
        "gulp-cached": "^1.1.1",
        "gulp-changed": "^3.2.0",
        "gulp-clean": "^0.4.0",
        "gulp-color": "0.0.2",
        "gulp-concat": "^2.6.1",
        "gulp-cssnano": "^2.1.3",
        "gulp-eslint": "^5.0.0",
        "gulp-header": "^2.0.5",
        "gulp-if": "^2.0.2",
        "gulp-imagemin": "^4.1.0",
        "gulp-load-plugins": "^1.5.0",
        "gulp-newer": "^1.4.0",
        "gulp-notify": "^3.2.0",
        "gulp-plumber": "^1.2.0",
        "gulp-rename": "^1.4.0",
        "gulp-rev": "^8.1.1",
        "gulp-sass": "^4.0.1",
        "gulp-sass-variables": "^1.2.0",
        "gulp-size": "^3.0.0",
        "gulp-svgmin": "^1.2.4",
        "gulp-svgstore": "^6.1.1",
        "gulp-twig": "^1.2.0",
        "gulp-uglify": "^3.0.1",
        "moment": "^2.22.2",
        "node-notifier": "^5.2.1",
        "os": "^0.1.1",
        "run-sequence": "^2.2.1",
        "stream-combiner2": "^1.1.1"
    }
}
